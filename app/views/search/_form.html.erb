<form method="GET" action="/search/" data-controller="search" data-action="search#submit">
  <label for="address" class="block font-medium sr-only">Search for a Chicago address</label>
  <div class="mt-1 flex rounded-md shadow-sm">
    <div class="relative flex items-stretch flex-grow focus-within:z-10">
      <input
        type="text"
        class="focus:ring-blue-500 focus:border-blue-500 block w-full rounded-none rounded-l-md border-gray-300"
        placeholder="e.g. 3324 North California Ave, Chicago, IL"
        data-search-target="address"
      >
      <input type="hidden" name="lat" data-search-target="lat" />
      <input type="hidden" name="lng" data-search-target="lng" />
    </div>
    <button class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
      Search
    </button>
  </div>
</form>